


<div class = "container d-flex justify-content-center">
  <div class = "top-message ">
    <h1 class= "d-flex justify-content-center">BOOK APP</h1>
    <h2>Welcome to Book website </h2>
    <% if current_user%>
      <p><%current_user.email%></p>
      <%= link_to "Log Out", destroy_user_session_url , method: :delete, class: 'btn btn-primary' %>
    <% else %>
      <p class=" d-flex justify-content-center">You are not signed in</p>
      <%= link_to "Sign up", new_user_registration_path, class: 'btn btn-primary d-flex justify-content-center' %>
      <br>
      <%= link_to "Login", new_user_session_path , class: 'btn btn-primary d-flex justify-content-center' %>
    <% end %>
  </div>
</div>


